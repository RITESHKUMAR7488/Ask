<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Unread indicator -->
            <View
                android:id="@+id/viewUnreadIndicator"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@color/primary_color"
                android:visibility="visible" />

            <!-- Notification icon -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/ivNotificationIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:background="@drawable/circle_light_primary"
                    android:src="@drawable/ic_notification"
                    app:tint="@color/primary_color" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Header with type and timestamp -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help Request"
                        android:textSize="10sp"
                        app:chipMinHeight="24dp"
                        app:chipCornerRadius="12dp"
                        app:chipBackgroundColor="@color/chip_background"
                        tools:text="Help Request" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvTimestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray_500"
                        android:textSize="12sp"
                        tools:text="2h ago" />

                </LinearLayout>

                <!-- Notification title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="Help Request" />

                <!-- Notification message -->
                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    tools:text="John Doe is requesting help with: Android Development Issue - Need assistance with RecyclerView implementation" />

                <!-- Sender info -->
                <LinearLayout
                    android:id="@+id/layoutSenderInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivSenderProfile"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person" />

                    <TextView
                        android:id="@+id/tvSenderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/primary_color"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="John Doe" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
