<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/notification_item_background">

            <!-- Enhanced Unread indicator -->
            <View
                android:id="@+id/viewUnreadIndicator"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:background="@drawable/unread_indicator_background"
                android:visibility="visible" />

            <!-- Enhanced Notification icon -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/ivNotificationIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    android:background="@drawable/notification_icon_background"
                    android:src="@drawable/ic_notification"
                    app:tint="@color/primary_color" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Enhanced Header with type and timestamp -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help Request"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:chipMinHeight="28dp"
                        app:chipCornerRadius="14dp"
                        app:chipBackgroundColor="@color/help_chip_color"
                        app:chipStrokeWidth="0dp"
                        tools:text="Help Request" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvTimestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/timestamp_background"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/gray_600"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:text="2h ago" />

                </LinearLayout>

                <!-- Enhanced Notification title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2dp"
                    tools:text="&#x1F91D; Someone wants to help!" />

                <!-- Enhanced Notification message -->
                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    tools:text="Hi! I can help you with 'Android Development Issue - Need assistance with RecyclerView implementation'" />

                <!-- Enhanced Sender info -->
                <LinearLayout
                    android:id="@+id/layoutSenderInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/sender_info_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivSenderProfile"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_person"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/primary_color" />

                    <TextView
                        android:id="@+id/tvSenderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/primary_color"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        tools:text="John Doe" />

                    <!-- Helper badge -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_verified"
                        app:tint="@color/success_color" />

                </LinearLayout>

                <!-- Contact hint (only for help requests) -->
                <TextView
                    android:id="@+id/tvContactHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="&#x1F4AC; Tap to contact helper"
                    android:textColor="@color/primary_color"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:background="@drawable/contact_hint_background"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>