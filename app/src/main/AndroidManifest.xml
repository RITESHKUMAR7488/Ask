<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions for notification features -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Vibration permission for haptic feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Phone call permission (for dialer intent) -->
    <uses-permission android:name="android.permission.CALL_PHONE"
        tools:ignore="PermissionImpliesUnsupportedChromeOsHardware" />

    <!-- Optional: Query all packages (for Android 11+) to check app availability -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <!-- Media permissions for CometChat file sharing -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <!-- Camera permission for CometChat -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Audio recording permission for CometChat voice messages -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Write external storage for older Android versions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Read external storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ask"
        android:largeHeap="true"
        android:hardwareAccelerated="true">

        <!-- Chat Activity -->
        <activity
            android:name=".chatModule.uis.ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.Ask"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".notificationModule.uis.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".addModule.uis.ChooseCommunityActivity"
            android:exported="false" />

        <activity
            android:name=".communityModule.uis.Activities.JoinCommunity"
            android:exported="false" />
        <activity
            android:name=".communityModule.uis.CommunityActivity"
            android:exported="false" />
        <activity
            android:name=".communityModule.uis.Activities.CreateCommunityActivity"
            android:exported="false" />
        <activity
            android:name=".addModule.uis.AddQueryActivity"
            android:exported="false" />
        <activity
            android:name=".mainModule.uis.activities.MainScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".onBoardingModule.uis.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".onBoardingModule.uis.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".onBoardingModule.uis.FirstScreen"
            android:exported="false" />

    </application>

</manifest>